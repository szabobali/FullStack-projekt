<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
</head>
<body>
	<h3>Cart Page</h3>
	<table width="80%" cellpading="2" cellspacing="2" border="1">
		<tr>
			<th>Opció</th>
			<th>Azonosító</th>
			<th><center>Név</center></th>
			<th>Ár</th>
			<th>Db</th>
			<th>Részösszeg</th>
		</tr>
		@if (ViewBag.cart != null)
		{
			@foreach (var item in ViewBag.cart)
			{
				<tr width="80%">
					<td>
						<a class="text-danger" asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.ID"> Eltávolítás </a>
					</td>
					<td>@item.Product.ID</td>
					<td>@item.Product.Name</td>
					<td>@item.Product.Price</td>
					<td align="center">@item.Quantity</td>
					<td align="center">@(item.Product.Price* item.Quantity)</td>
				</tr>
			}
		}
		<tr>
			<td align="right" colspan="6">Összesen: </td>
			<td>@ViewBag.total</td>
		</tr>
	</table>
	<br />
	<a class="text-black" asp-controller="home" asp-action="index">Vásárolok még</a>
	<br />
	@if (ViewBag.cart != null && ((List<webshop_projekt.Models.Item>)ViewBag.cart).Count != 0)
	{
		<a asp-controller="Cart" asp-action="CheckOut" class="btn btn-success mt-3">Tovább a fizetéshez</a>
	}
</body>
</html>
