@model IEnumerable<string>
<div class="pb-2">
	<a class="btn btn-block @(ViewBag.SelectedCategory==""?"btn-primary":
		"btn-dark bg-gradient")" asp-controller="Home" asp-action="Index"
	   asp-route-category="">Összes kategória</a>
</div>
@foreach (string category in Model)
{
	<div class="pb-2">
		<a class="btn btn-block @(category==ViewBag.SelectedCategory?"btn-primary":
				"btn-dark bg-gradient")" asp-controller="Home" asp-action="Index"
	   asp-route-category="@category">@category</a>
</div>
}